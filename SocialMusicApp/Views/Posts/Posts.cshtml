@model redenet_site.Models.Posts.PostsViewModel
@{
    ViewData["Title"] = "Home Page";
}
<hr />
Pagina de Posts
<hr />
<form method="post" action="/css/CriarPost" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="formFile" class="form-label">Inserir uma Imagem</label>
        <input class="form-control" type="file" name="imagem">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Titulo</label>
        <input type="text" class="form-control" id="exampleFormControlInput1">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Texto</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <input type="submit" class="btn btn-primary" value="Postar" />
</form>

<hr />

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src=".../100px180/" alt="Imagem de capa do card">
    <div class="card-body">
        <h5 class="card-title">Título do card</h5>
        <p class="card-text">Um exemplo de texto rápido para construir o título do card e fazer preencher o conteúdo do card.</p>
        <a href="#" class="btn btn-primary">Visitar</a>
    </div>
</div>